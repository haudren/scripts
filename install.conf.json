[
	{
		"clean": ["~"]
	},
	{
		"link": {
			"~/.vimrc": "vimrc",
			"~/.gitignore": "gitignore",
			"~/.zshrc": "zshrc",
			"~/.xmobarrc": "xmonad/xmobarrc"
		}
	},
	{
		"shell": [
			["git config --global core.excludesfile ~/.gitgnore", "Setting up gitignore"],
			["mkdir -p ~/.xmonad", "Creating xmonad folder"]
		]
	},
	{
		"link": {
			"~/.xmonad/xmonad.hs": "xmonad/xmonad.hs",
			"~/.xmonad/start-xmonad": "xmonad/start-xmonad"
			}
	},
	{
		"shell": [
				["git submodule update --init --recursive", "Installing submodules"]
			 ]
	},
	{
		"link": {
			"~/.vim": "vim/"
			}
	},
	{
		"shell": [
				["wget --no-check-certificate http://install.ohmyz.sh -O - | sh", "Installing oh-my-zsh"],
				["cd ~/.oh-my-zsh && git remote add upstream https://github.com/haudren/oh-my-zsh.git", "Adding custom remote"]
			]
	}
]

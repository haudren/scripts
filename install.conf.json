[
	{
		"clean": ["~"]
	},
	{
		"link": {
			"~/.vimrc": "vimrc",
			"~/.gitignore": "gitignore",
			"~/.zshrc": "zshrc",
			"~/.xmobarrc": "xmonad/xmobarrc"
		}
	},
	{
		"shell": [
			["mkdir ~/.xmonad", "Creating xmonad folder"]
		]
	},
	{
		"link": {
			"~/.xmonad/xmonad.hs": "xmonad/xmonad.hs",
			"~/.xmonad/start-xmonad": "xmonad/start-xmonad"
			}
	},
	{
		"shell": [
				["git submodule update --init --recursive", "Installing submodules"]
			 ]
	},
	{
		"link": {
			"~/.vim": "vim/"
			}
	}
]
